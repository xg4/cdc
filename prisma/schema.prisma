generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model House {
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  uuid     String   @id
  region   String
  name     String
  quantity Int // 住房套数
  startAt  DateTime @map("start_at") // 报名开始时间
  endsAt   DateTime @map("ends_at") // 报名结束时间
  status   String
  profile  Profile?

  @@index([region, startAt])
  @@map(name: "houses")
}

model Profile {
  id                Int       @id @default(autoincrement())
  detail            String // 预售范围
  certificateNumber String    @map("certificate_number")
  phoneNumber       String    @map("phone_number") // 开发商咨询电话
  externalDate      DateTime? @map("external_date") // 名单外人员资格已释放时间
  internalDate      DateTime? @map("internal_date") // 名单内人员资格已释放时间
  qrCodeDate        DateTime? @map("qr_code_date") // 预审码取得截止时间
  house             House     @relation(fields: [houseUuid], references: [uuid])
  houseUuid         String    @unique

  @@map(name: "profiles")
}

model Request {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  page Int
  hash String @unique

  @@map(name: "requests")
}
